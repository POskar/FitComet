<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome_Activity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="196dp"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="300dp"
        android:src="@drawable/logonew_color" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="160dp"
        android:text="Witaj mordo na FitComecie" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="183dp"
        android:text="Zabierzemy Cię w podróż pełną tłuszczu i łez !" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="228dp"
        android:text="Waga ulańcu:" />

    <EditText
        android:id="@+id/editTextWzrost_Welcome"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginStart="100dp"
        android:layout_marginTop="108dp"
        android:hint="Wzrost"
        android:inputType="number"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editTextWaga_Welcome"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginStart="100dp"
        android:layout_marginTop="-12dp"
        android:hint="Waga"
        android:inputType="number"
        android:textColor="@color/black" />

    <RadioGroup
        android:layout_width="130dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="264dp">

        <RadioButton
            android:id="@+id/radioButtonMezczyzna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mezczyzna" />

        <RadioButton
            android:id="@+id/radioButtonKobieta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="Ta Gorsza" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="286dp"
        android:text="Plec" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="348dp"
        android:text="Wzrost w CM" />

    <Button
        android:id="@+id/moveToMain"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="400dp"
        android:text="Lecimy Kurwa Tutaj" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="46dp"
        android:text="Wsparcie"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/infosup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutaj możesz zgłosić uwagi/błędy naszej aplikacji do supportu."
            android:textSize="20dp" />

        <EditText
            android:id="@+id/messageTVs"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/infosup"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="150dp"
            android:background="@drawable/et_bg_black"
            android:gravity="top"/>

        <Button
            android:id="@+id/messageID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="57dp"
            android:text="Wyślij" />

    </RelativeLayout>

</RelativeLayout>